<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/my_vision1"
                android:id="@+id/my_vision1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu1_line"
                android:layout_alignLeft="@id/my_vision1"
                android:layout_alignStart="@id/my_vision1"
                android:layout_alignRight="@id/my_vision1"
                android:layout_alignEnd="@id/my_vision1"
                android:contentDescription="@null"
                android:id="@+id/my_line1"
                android:layout_below="@id/my_vision1"/>
            <com.example.chocho.visiongraph.EditView
                android:id="@+id/my_vision1_answer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/my_vision1"
                android:layout_alignStart="@id/my_vision1"
                android:layout_alignRight="@id/my_vision1"
                android:layout_alignEnd="@id/my_vision1"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/my_line1"
                android:lineSpacingExtra="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/my_vision2"
                android:id="@+id/my_vision2"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/my_vision1_answer"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu1_line"
                android:layout_alignLeft="@id/my_vision1"
                android:layout_alignStart="@id/my_vision1"
                android:layout_alignRight="@id/my_vision1"
                android:layout_alignEnd="@id/my_vision1"
                android:contentDescription="@null"
                android:id="@+id/my_line2"
                android:layout_below="@id/my_vision2"/>
            <com.example.chocho.visiongraph.EditView
                android:id="@+id/my_vision2_answer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/my_vision1"
                android:layout_alignStart="@id/my_vision1"
                android:layout_alignRight="@id/my_vision1"
                android:layout_alignEnd="@id/my_vision1"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/my_line2"
                android:lineSpacingExtra="5dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/my_vision3"
                android:id="@+id/my_vision3"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/my_vision2_answer"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu1_line"
                android:layout_alignLeft="@id/my_vision1"
                android:layout_alignStart="@id/my_vision1"
                android:layout_alignRight="@id/my_vision1"
                android:layout_alignEnd="@id/my_vision1"
                android:contentDescription="@null"
                android:id="@+id/my_line3"
                android:layout_below="@id/my_vision3"/>
            <com.example.chocho.visiongraph.EditView
                android:id="@+id/my_vision3_answer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/my_vision1"
                android:layout_alignStart="@id/my_vision1"
                android:layout_alignRight="@id/my_vision1"
                android:layout_alignEnd="@id/my_vision1"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/my_line3"
                android:lineSpacingExtra="5dp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>