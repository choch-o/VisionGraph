<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.chocho.visiongraph.eventAddActivity">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventText_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사건"
            android:textColor="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="8"
            android:hint="입력하세요"
            android:layout_marginLeft="20dp"
            android:inputType="text"
            android:layout_toRightOf="@id/eventText_name"
            android:layout_alignTop="@id/eventText_name"
            android:layout_alignBottom="@id/eventText_name"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventText_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이"
            android:textColor="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/event_age"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="8"
            android:hint="입력하세요"
            android:layout_marginLeft="20dp"
            android:inputType="text"
            android:layout_toRightOf="@id/eventText_age"
            android:layout_alignTop="@id/eventText_age"
            android:layout_alignBottom="@id/eventText_age"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventText_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="점수"
            android:textColor="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/event_score"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="8"
            android:hint="입력하세요"
            android:layout_marginLeft="20dp"
            android:inputType="text"
            android:layout_toRightOf="@id/eventText_score"
            android:layout_alignTop="@id/eventText_score"
            android:layout_alignBottom="@id/eventText_score"
            />

        <Button
            android:id="@+id/eventAddButton"
            android:layout_below="@id/event_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:textSize="15sp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</LinearLayout>
